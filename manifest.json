{
  "name": "Telegram Read Later",
  "description": "Save url to Telegram",
  "version": "1.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["activeTab", "https://api.telegram.org/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Send this page to Telegram."
  },
  "manifest_version": 2
}
