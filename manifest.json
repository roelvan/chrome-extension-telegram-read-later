{
  "name": "Telegram Read Later",
  "description": "Save url to Telegram",
  "version": "0.0.0.1",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  },
  "permissions": [
    "activeTab",
    "notifications",
    "https://telegram-read-later.now.sh/*",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Send this page to Telegram."
  },
  "manifest_version": 2
}
